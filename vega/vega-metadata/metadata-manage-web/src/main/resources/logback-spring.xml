<configuration scan="true" scanPeriod="120 seconds">
    <property name="log.base" value="logs"/>

    <!--获取spring配置文件的变量-->
    <springProperty scope="context" name="anyrobotLogggerEnabled" source="anyrobot.log.enabled" defaultValue="false"/>
    <springProperty scope="context" name="anyrobotLogggerEndpointUrl" source="anyrobot.log.endpoint" defaultValue=""/>
    <springProperty scope="context" name="loggerLevel" source="anyrobot.log.level" defaultValue="INFO"/>
    <springProperty scope="context" name="serviceName" source="spring.application.name" defaultValue=""/>
    <springProperty scope="context" name="serviceVersion" source="spring.application.version" defaultValue="1.0.0"/>


    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>INFO</level>
        </filter>
        <encoder>
            <pattern>
                [%level] %date{yyyy-MM-dd HH:mm:ss.SSS Z}
                %logger{96}:[%line][TraceId:%X{trace-id:-0}][SpanId:%X{span-id:-0}] - %msg%n
            </pattern>
            <charset>UTF-8</charset>
        </encoder>
    </appender>


    <appender name="TaskAppender" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${log.base}/task.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>${log.base}/task.%d{yyyy-MM-dd_HH}.%i.log</fileNamePattern>
            <maxHistory>168</maxHistory>
            <maxFileSize>200MB</maxFileSize>
            <totalSizeCap>50GB</totalSizeCap>
            <cleanHistoryOnStart>true</cleanHistoryOnStart>
        </rollingPolicy>
        <encoder>
            <pattern>
                [%level] %date{yyyy-MM-dd HH:mm:ss.SSS Z} %logger{96}:[%line] - -
                [%c-%M][Thread-%thread][TaskId-%X{taskId:-0}] - %msg%n
            </pattern>
            <charset>UTF-8</charset>
        </encoder>
    </appender>


    <appender name="AnyRobotLog" class="com.eisoo.standardization.common.logback.appender.AnyRobotLogAppender">
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <!-- 日志收集最低日志级别 -->
            <level>${loggerLevel}</level>
        </filter>
        <layout class="ch.qos.logback.classic.PatternLayout">
            <!--格式化输出：%d表示日期，%thread表示线程名，%-5level：级别从左显示5个字符宽度%msg：日志消息，%n是换行符 -->
            <pattern>[%level] %date{yyyy-MM-dd HH:mm:ss.SSS Z} %logger{96}:[%line] - %msg%n</pattern>
        </layout>
        <enabled>${anyrobotLogggerEnabled}</enabled>
        <endpointUrl>${anyrobotLogggerEndpointUrl}</endpointUrl>
        <serviceName>${serviceName}</serviceName>
        <serviceVersion>${serviceVersion}</serviceVersion>
        <enabled>false</enabled>
    </appender>

    <root level="DEBUG">
        <appender-ref ref="AnyRobotLog"/>
        <appender-ref ref="STDOUT"/>
    </root>

    <logger name="TaskLogger" level="INFO" additivity="true">
        <appender-ref ref="TaskAppender"/>
    </logger>
</configuration>
